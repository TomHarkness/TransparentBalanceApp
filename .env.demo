# Demo Mode Configuration
# Set to 'sandbox' to use real Basiq sandbox with Hooli bank
# Set to 'true' for local fake data (no API calls)
DEMO_MODE=sandbox

# Basiq Sandbox Credentials (get your own from https://dashboard.basiq.io/)
# These are placeholders - replace with your actual sandbox credentials
BASIQ_API_KEY=your_sandbox_api_key_name
BASIQ_API_SECRET=your_sandbox_api_key_secret

# Demo user created with Hooli bank connection (you'll create this)
BASIQ_USER_ID=your_demo_user_id_with_hooli

# Target bank institution ID (AU00000 for Hooli sandbox, AU.SUNCORP for production)
BASIQ_TARGET_INSTITUTION=AU00000

# Features Configuration
# Set to 'true' to enable transaction history display (works with demo data)
# Set to 'false' for balance-only mode
DISPLAY_TRANSACTIONS=true

# Demo/Development Consent Flow Configuration
# Admin password for demo environment (change for production!)
ADMIN_PASSWORD=demo123
# Callback URL for local development
CONSENT_CALLBACK_URL=http://localhost:5000/admin/consent-callback

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=true